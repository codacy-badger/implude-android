<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="TextTheme" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BigText" parent="TextTheme">
        <item name="fontFamily">@font/noto_black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="SelectedText" parent="TextTheme">
        <item name="fontFamily">@font/noto_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DisabledText" parent="TextTheme">
        <item name="fontFamily">@font/noto_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#BBBBBB</item>
    </style>

    <style name="TitleText" parent="TextTheme">
        <item name="fontFamily">@font/noto_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SubTitleText" parent="TextTheme">
        <item name="fontFamily">@font/noto_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ContentText" parent="TextTheme">
        <item name="fontFamily">@font/noto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="CupertinoDialog" parent="@android:style/Theme.Translucent">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>

</resources>
